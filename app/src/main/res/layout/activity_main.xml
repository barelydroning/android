<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.barelydroning.drone.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/main_azimuth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Azimuth: "
            android:padding="10dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/main_pitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pitch: "
            android:padding="10dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/main_roll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Roll: "
            android:padding="10dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#efefef"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"

            android:paddingBottom="2dp"
            android:textColor="#3d3d3d"
            android:text="Pitch"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            >
            <TextView
                android:id="@+id/pitch_p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="P: 1000"
                android:padding="10dp"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="0dp" />
            <TextView
                android:id="@+id/pitch_i"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="I: 1000"
                android:padding="10dp"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="0dp" />
            <TextView
                android:id="@+id/pitch_d"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="D: 1000"
                android:padding="10dp"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="0dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"

            android:paddingBottom="2dp"
            android:textColor="#3d3d3d"
            android:text="Roll"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            >
            <TextView
                android:id="@+id/roll_p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="P: 1000"
                android:padding="10dp"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="0dp" />
            <TextView
                android:id="@+id/roll_i"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="I: 1000"
                android:padding="10dp"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="0dp" />
            <TextView
                android:id="@+id/roll_d"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="D: 1000"
                android:padding="10dp"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="0dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#efefef"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="2dp"
            android:textColor="#3d3d3d"
            android:text="Motors"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/motor_a"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="A: 1000"
            android:padding="10dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/motor_b"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="B: 1000"
            android:padding="10dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/motor_c"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="C: 1000"
            android:padding="10dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/motor_d"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="D: 1000"
            android:textSize="18sp"
            android:padding="10dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/motor_e"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="E: 1000"
            android:textSize="18sp"
            android:padding="10dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/motor_f"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="F: 1000"
            android:padding="10dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEST"
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="20sp"
        />


</LinearLayout>
